# Keystatic GitHub App Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git!

# Find these values at: https://github.com/settings/apps/YOUR_APP_NAME

# Client ID (visible on app settings page)
KEYSTATIC_GITHUB_CLIENT_ID=

# Client Secret (generated on app settings page)
KEYSTATIC_GITHUB_CLIENT_SECRET=

# Installation ID (from the installation URL)
KEYSTATIC_GITHUB_INSTALLATION_ID=

# Private Key (paste the ENTIRE contents of the .pem file)
# Include the BEGIN and END lines
KEYSTATIC_GITHUB_PRIVATE_KEY=

# GitHub Repository (format: owner/repo)
KEYSTATIC_GITHUB_REPO=gwsig-tech/game-writing.com

# Keystatic Secret (for securing API routes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
KEYSTATIC_SECRET=

# Keystatic GitHub App Slug (the app name from the URL: https://github.com/apps/YOUR-APP-SLUG)
PUBLIC_KEYSTATIC_GITHUB_APP_SLUG=game-writing-keystatic
